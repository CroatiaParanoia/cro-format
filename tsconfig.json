{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES5",
    "strict": true,
    "lib": ["DOM", "esnext"],
    "declaration": true,
    "declarationMap": false,
    "outDir": "dist",
    "declarationDir": "types",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@constant/*": ["src/constant/*"],
      "@dataFormat/*": ["src/format/*"],
      "@creator/*": ["src/creator/*"],
      "@utils/*": ["src/utils/*"]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/*.ts", "src/**/*.ts"],
  "exclude": ["node_modules", "lib", "types", "dist"]
}
