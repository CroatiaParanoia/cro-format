{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "strict": true,
    "lib": ["DOM", "esnext"],
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src/*"],
      "@constant/*": ["./src/constant/*"],
      "@dataFormat/*": ["src/format/*"],
      "@creator/*": ["src/creator/*"],
      "@utils/*": ["./src/utils/*"]
    }
  },
  "exclude": ["./node_modules", "./dist"]
}
