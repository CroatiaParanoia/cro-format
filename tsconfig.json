{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES5",
    "strict": true,
    "lib": ["DOM", "esnext"],
    "declaration": true,
    "declarationMap": false,
    "outDir": "dist",
    "declarationDir": "types",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src/*"],
      "@constant/*": ["./src/constant/*"],
      "@dataFormat/*": ["src/format/*"],
      "@creator/*": ["src/creator/*"],
      "@utils/*": ["./src/utils/*"]
    }
  },
  "include": ["./src/*.ts"],
  "exclude": ["./node_modules", "./lib", "./types", "./dist", "**/__tests__/*"]
}
